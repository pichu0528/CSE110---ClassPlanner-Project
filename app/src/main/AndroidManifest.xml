<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.annchih.classplanner" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuarterListView"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SingleItem"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Select_classesTaken"
            android:label="@string/title_activity_summary_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ClassList"
            android:label="classlist" >
        </activity>
        <activity
            android:name=".Calender_Activity"
            android:label="@string/title_activity_calender_"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>